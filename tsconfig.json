{
  "compilerOptions": {
    "declaration": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2015",
    "lib": [
      "es2015",
      "es2015.promise",
      "es2015.core",
      "dom"
    ],
    // don't auto-discover @types/node, it results in a ///<reference in the .d.ts output
    "types": [],
    "sourceMap": true,
    "inlineSources": true
  }
}